{
	"name": "market-data-api",
	"version": "1.0.0",
	"description": "Simple API that provides products from a market product",
	"keywords": [
		"market",
		"api",
		"tests",
		"coverage",
		"orm",
		"seeds"
	],
	"homepage": "https://github.com/Nunes-ND/market-data-api#readme",
	"bugs": {
		"url": "https://github.com/Nunes-ND/market-data-api/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Nunes-ND/market-data-api.git"
	},
	"license": "ISC",
	"author": "Gilson Nunes",
	"type": "commonjs",
	"main": "dist/main.js",
	"scripts": {
		"start": "node dist/main.js",
		"dev": "tsx watch --env-file .env src/main.ts",
		"build": "tsc -p tsconfig.prod.json",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write --unsafe",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:unit": "vitest run unit",
		"test:integration": "vitest run integration",
		"db:generate": "drizzle-kit generate --config=drizzle.config.ts",
		"db:push": "drizzle-kit push --config=drizzle.config.ts",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@electric-sql/pglite": "^0.3.7",
		"@types/node": "^24.3.0",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.4",
		"husky": "^9.1.7",
		"pino-pretty": "^13.1.1",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"drizzle-orm": "^0.44.4",
		"fastify": "^5.5.0",
		"fastify-type-provider-zod": "^5.0.3",
		"pg": "^8.16.3",
		"zod": "^4.0.17"
	}
}
